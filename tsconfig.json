{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"typeRoots": [
			"node_modules/@types"
		],
		"esModuleInterop": true
	},
	"include": [
		"src",
		"src/test/**/*.ts"
	]
}
